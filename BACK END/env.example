# Configuration de l'application
NODE_ENV=development
PORT=3000

# Configuration PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=pako_user
DB_PASSWORD=pako_password
DB_NAME=pako_db

# Configuration du pool de connexions PostgreSQL
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=10000
DB_STATEMENT_TIMEOUT=30000
DB_QUERY_TIMEOUT=30000
DB_SSL=false

# Configuration Redis (pour le cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_DURATION=300000

# Configuration JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Configuration CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
CORS_CREDENTIALS=true

# Configuration SMS
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com
SMS_SENDER_ID=PAKO

# Configuration Email
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@pako.com
EMAIL_PROVIDER=sendgrid

# Configuration des paiements
WAVE_API_KEY=your-wave-api-key
WAVE_MERCHANT_ID=your-wave-merchant-id
ORANGE_MONEY_API_KEY=your-orange-money-api-key
ORANGE_MONEY_MERCHANT_ID=your-orange-money-merchant-id

# Configuration des prix
PRICING_CONFIG={"basePrice":1000,"pricePerKm":500,"pricePerKg":200}